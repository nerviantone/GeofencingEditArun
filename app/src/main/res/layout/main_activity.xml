<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="TextView" />


    </LinearLayout>


    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        tools:context=".MainActivity" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="99dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/add_geofences_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="addGeofencesButtonHandler"
            android:layout_weight="1"
            android:text="Add GeoFences" />

        <Button
            android:id="@+id/remove_geofences_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="removeGeofencesButtonHandler"
            android:layout_weight="1"
            android:text="Remove GeoFences" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Add Loc" />

    </LinearLayout>
</LinearLayout>